<script type="text/javascript">
(function($){ 
	$(document).ready(function(){	
		$('table.list-fees').hide();
		$('table.hourly-fees').show();
		$('select[name=filter_time]').change(function(e) {
			$('.list-fees').hide();
			var filter = $(this).val();
			console.log('filter: ',filter);
			switch(filter)
			{
				case "daily":
				  $('.daily-fees').show();
				  break;
				case "weekly":
				  $('.weekly-fees').show();
				  console.log('gfhfhjg: ',filter);
				  break;
				case "monthly":
				  $('.monthly-fees').show();
				  break;
				default:
				  $('.hourly-fees').show();
			}
		});		
	});
})(jQuery);
</script>
